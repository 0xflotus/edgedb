CREATE VIEW test::expert_map := (
    SELECT [
        'Alice' -> 'pro',
        'Bob' -> 'noob',
        'Carol' -> 'noob',
        'Dave' -> 'casual',
    ]
);


CREATE VIEW test::scores := (
    SELECT {
        (name := 'Alice', score := 100, games := 10),
        (name := 'Bob', score := 11, games := 2),
        (name := 'Carol', score := 31, games := 5),
        (name := 'Dave', score := 78, games := 10),
    }
);
